.ghost {
  background-color: transparent;
  border-width: 0;
  padding: 2px;
  height: 36px;
  width: 36px;
  display: inline-block;
  transition: box-shadow 0.25s ease-out, background-color 0.25s ease-out;
  border-radius: var(--pad-lg);
  cursor: pointer;

  &:hover, &:focus {
    outline: none;
    box-shadow: 0px 0px 0px 2px rgba(104, 156, 252, 0.25);
    background-color: rgba(104, 156, 252, 0.25);
  }

  .icon {
    height: 100%;
  }
}