.timerButton {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20px;
  bottom: 30px;
  right: 30px;
  height: 36px;
  width: 36px;
  opacity: 1;
  transition: box-shadow 0.25s ease-out, opacity .6s ease-in-out;
  z-index: var(--z-timer-button);

  &.active {
    box-shadow: 0 0 0 rgba(204,169,44, 0.4);
    animation: pulse 2s infinite;
  }

  &.hide {
    opacity: 0;
  }

  .floatingTime {
    position: absolute;
    top: -20px;
    background-color: var(--primary);
    padding: 1px 6px;
    border-radius: 10px;
    font-size: .8em;
  }
}

.container {
  position: fixed;
  transition: all 0.5s ease-in-out;
  z-index: var(--z-timer);
  margin: 0;
  max-height: 100%;
  max-width: 100%;

  bottom: -450px;
  height: 450px;
  width: 320px;
  right: var(--pad-md);
  padding: var(--pad-md) 0;

  &.show {
    transform: translateY(-450px);
  }

  @mixin phone {
    width: 100%;
    right: 0;
    padding: var(--header-height) var(--pad-xs) var(--pad-xs) var(--pad-xs);
  }

  .timer {
    display: flex;
    flex-direction: column;
    position: relative;
    border: 2px solid #ccc;
    background: #fff;
    height: 100%;
    width: 100%;
    border-radius: var(--border-radius);
    box-shadow: rgba(0, 0, 0, 0.3) 0 5px 15px 0;

    .close {
      z-index: var(--z-close-modal);
      position: absolute;
      top: -10px;
      right: -10px;
      border: 2px solid;
      height: 26px;
      width: 26px;
      font-weight: 500;
      display: flex;
      align-items: center;
      justify-content: center;

      > svg {
        font-size: 1rem;
      }

      @mixin phone {
        top: 5px;
        right: 5px;
      }
    }

    .timeContainer {
      height: 100px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      overflow: hidden;

      .currentTime {
        font-size: 2.5em;
      }

      .totalTime {
        font-size: 1.25em;
      }
    }

    .log {
      flex: 1;
      overflow-y: auto;

      .info {
        padding: var(--pad);
        font-size: 0.9em;

        > p {
          margin-top: 0
        }
      }

      .line {
        padding: var(--pad-sm);
        border-top: 1px solid;
        display: flex;
        justify-content: space-between;

        &:first-child {
          border: 0;
        }

        .timestamp {
          white-space: nowrap;
          cursor: default;
        }

        > input {
          padding: 2px var(--pad-xs);
          width: 140px;
          border: 1px solid;
          border-radius: var(--border-radius);
        }
      }
    }

    .actions {
      padding: var(--pad-sd);
      display: flex;
      justify-content: flex-end;

      .resetButton {
        margin-right: var(--pad);
      }
    }
  }
}

.timer.light {
  background-color: var(--light-bg);
  color: var(--light-text);

  .close {
    border-color: var(--light-border);
  }

  .log {
    background-color: var(--light-element);

    .line {
      border-color: var(--light-border);

      > input {
        background-color: var(--light-header);
        color: var(--light-text);
        border-color: var(--light-form-border);
      }
    }
  }
}

.timer.dark {
  background-color: var(--dark-bg);
  color: var(--dark-text);

  .close {
    border-color: var(--dark-border);
  }

  .log {
    background-color: var(--dark-element);

    .line {
      border-color: var(--dark-border);

      > input {
        background-color: var(--dark-header);
        color: var(--dark-text);
        border-color: var(--dark-form-border);
      }
    }
  }
}

@keyframes pulse {
  0% { box-shadow: 0 0 0 0 rgba(104, 156, 252, 0.4); }
  70% { box-shadow: 0 0 0 8px rgba(104, 156, 252, 0); }
  100% { box-shadow: 0 0 0 0 rgba(104, 156, 252, 0); }
}