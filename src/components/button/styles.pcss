.button {
  padding: var(--pad-sm) var(--pad);
  border-radius: var(--pad);
  border-width: 0;
  letter-spacing: 2px;
  color: #FFFFFF;
  background-color: rgba(104, 156, 252, 1);
  text-transform: uppercase;
  font-size: .6rem;
  transition: box-shadow .25s;

  &:hover, &:focus {
    outline: none;
    box-shadow: 0px 0px 0px 4px rgba(104, 156, 252, 0.25);
  }
}
