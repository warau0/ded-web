.link {
  display: flex;
  align-items: center;

  a {
    font-size: 1.1em;
    text-decoration: none;
    color: var(--link);
    font-weight: 500;
    margin-left: var(--pad-sm);

    &:hover {
      text-decoration: underline;
    }
  }

  img {
    height: 25px;
    width: 25px;
    user-select: none;
  }
}